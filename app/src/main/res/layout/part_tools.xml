<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/part_tools"
    app:layout_constraintBottom_toBottomOf="@id/group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/gutter"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.jamie.imouse.ShortcutButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gutter"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="centerInside"
            android:src="@drawable/ici_sketch"
            android:tag="AppSketch2DWrapperCmd" />

        <com.jamie.imouse.ShortcutButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gutter"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="centerInside"
            android:src="@drawable/ici_extrude"
            android:tag="PartExtrudeCmd"/>

        <com.jamie.imouse.ShortcutButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gutter"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="centerInside"
            android:src="@drawable/ici_revolve"
            android:tag="PartRevolveCmd"/>

        <com.jamie.imouse.ShortcutButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gutter"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="centerInside"
            android:src="@drawable/ici_sweep"
            android:tag="PartSweepCmd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <com.jamie.imouse.ShortcutButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gutter"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="centerInside"
            android:src="@drawable/ici_hole"
            android:tag="PartHoleCmd"/>

        <com.jamie.imouse.ShortcutButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gutter"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="centerInside"
            android:src="@drawable/ici_chamfer"
            android:tag="PartChamferCmd"/>


        <com.jamie.imouse.ShortcutButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gutter"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="centerInside"
            android:src="@drawable/ici_fillet"
            android:tag="PartFilletCmd"/>

        <com.jamie.imouse.ShortcutButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gutter"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="centerInside"
            android:src="@drawable/ici_plane"
            android:tag="PartPlanarPlaneWorkPlaneCmd"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>